{% extends 'layout.twig' %}

{% block body %}

    <h1>Cr√©ation d'une box</h1>
    <form method="post">
        <label for="libelle"> Box :</label>
        <input type="text" id="libelle" name="libelle" value="Nom de la box" required>
        <br>

        <label for="description"> Description :</label>
        <input type="text" id="description" name="description" value="Description de la box" required>
        <br>

        <label for="kdo"> Kdo :</label>
        <select id="kdo" name="kdo">
            <option value="" selected>Choose...</option>
            <option value="1">Yes</option>
            <option value="0">No</option>
        </select>
        <br>

        <label for="message_kdo"> Message Kdo :</label>
        <textarea id="message_kdo" name="message_kdo"></textarea>
        <br>

        <input type="hidden" id="csrf_token" name="csrf_token" value="{{ csrf_token }}">
        <input type="submit" value="Valider">
    </form>

{% endblock %}
